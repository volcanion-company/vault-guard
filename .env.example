# Database Configuration
ConnectionStrings__WriteDatabase=Host=localhost;Port=5432;Database=vaultguard;Username=vaultguard_user;Password=CHANGE_ME
ConnectionStrings__ReadDatabase=Host=localhost;Port=5432;Database=vaultguard;Username=vaultguard_user;Password=CHANGE_ME
